@model IEnumerable<ManagerFPTs.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>View Courses</h2>

<div class="form-group">
    @Html.ActionLink("New Course", "Create", "Courses", null, new { @class = "btn btn-primary" })
</div>

@using (Html.BeginForm("Index", "Courses", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchString", null, new { placeholder = "Search by Description ...", required = "required" })
        <button type="submit"><i class="">Search</i></button>
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Course</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Category.Name</td>
                <td>
                    @Html.ActionLink(
                                    "Details",
                                    "Details",
                                    "Categories",
                                    new { id = course.Id },
                                    new { @class = "btn btn-primary" })
                    @Html.ActionLink(
                                     "Edit",
                                     "Edit",
                                     "Courses",
                                     new { id = course.Id },
                                     new { @class = "btn btn-default" })
                    @Html.ActionLink(
                                     "Delete",
                                     "Delete",
                                     "Categories",
                                     new { id = course.Id },
                                     new { @class = "btn btn-danger" })


                </td>
            </tr>
        }
    </tbody>

</table>


