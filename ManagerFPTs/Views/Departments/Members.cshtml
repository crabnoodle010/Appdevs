@model IEnumerable<ManagerFPTs.Models.ApplicationUser>
@{
    ViewBag.Title = "Members";
}

<h2>Trainee In Department</h2>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item active">
                Trainee In Department
                <span class="badge">@Model.Count()</span>
            </li>
            @foreach (var user in Model)
            {
                <li class="list-group-item">
                    @user.Email
                    <div class="float-right">
                        <span>
                            @Html.ActionLink(
                                            "Remove",
                                            "RemoveMember",
                                            "Departments",
                                            new { id = ViewBag.TeamId, userId = user.Id },
                                            new { @class = "text-danger" }
                                            )

                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

